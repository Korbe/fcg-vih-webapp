{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "npm run free-the-public && mix",
        "watch": "npm run free-the-public && mix watch",
        "watch-poll": "npm run free-the-public && mix watch -- --watch-options-poll=1000",
        "hot": "npm run free-the-public && mix watch --hot",
